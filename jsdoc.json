{
  "opts": {
    "template": "node_modules/better-docs",
    "encoding": "utf8",
    "destination": "docs/",
    "readme": "README.md",
    "recurse": true
  },
  "tags": {
    "allowUnknownTags": [
      "optional",
      "category",
      "subcategory",
      "component"
    ]
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "node_modules/better-docs/category",
    "node_modules/better-docs/component"
  ],
  "source": {
    "include": [
      "./src"
    ],
    "includePattern": ".[ts|tsx]$",
    "excludePattern": "(node_modules/|docs|.scss$)"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true,
    "better-docs": {
      "name": "S.R - Documentation",
      "title": "S.R - Documentation",
      "hideGenerator": false,
      "css": "doc.style.override.css",
      "navLinks": [
        {
          "label": "Github",
          "href": "https://github.com/sr-sefaz-pb/web-app"
        }
      ]
    }
  }
}
